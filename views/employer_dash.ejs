<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employer Dashboard | Helply</title>
  <link rel="stylesheet" href="../css/employer-dashboard.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="logo">Helply</div>
    <ul class="nav-links">
      <li><a href="employer-dashboard.html" class="active">Dashboard</a></li>
      <li><a href="starthiring.html">Post a Job</a></li>
      <li><a href="myjobs.html">My Jobs</a></li>
      <li><a href="employer-profile.html">Profile</a></li>
      <li><a href="index.html">Logout</a></li>
    </ul>
  </nav>

  <!-- Dashboard Content -->
  <section class="dashboard">
    <h1>Welcome back, <span id="employerName">Ananya</span> ðŸ‘‹</h1>

    <!-- Stats Section -->
    <div class="stats">
      <div class="stat-card">
        <h2 id="jobsPosted">3</h2>
        <p>Jobs Posted</p>
      </div>
      <div class="stat-card">
        <h2 id="applicationsReceived">8</h2>
        <p>Applications Received</p>
      </div>
      <div class="stat-card">
        <h2 id="jobsFilled">2</h2>
        <p>Jobs Filled</p>
      </div>
    </div>

    <!-- Recent Job Postings -->
    <div class="section">
      <h2>Recent Job Postings</h2>
      <div class="jobs" id="jobList">
        <!-- Injected by JS -->
      </div>
    </div>

    <!-- Applications Received -->
    <div class="section">
      <h2>Applications Received</h2>
      <div class="applications" id="applicationsList">
        <!-- Injected by JS -->
      </div>
    </div>
  </section>

  <!-- Job Details Modal -->
  <div id="jobModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2 id="modalTitle"></h2>
      <p><strong>Location:</strong> <span id="modalLocation"></span></p>
      <p><strong>Status:</strong> <span id="modalStatus"></span></p>
      <p id="modalDescription"></p>
    </div>
  </div>

  <!-- Manage Application Modal -->
  <div id="manageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Manage Application</h2>
      <p><strong>Applicant:</strong> <span id="applicantName"></span></p>
      <p><strong>Applied for:</strong> <span id="appliedJob"></span></p>
      <p><strong>Status:</strong> <span id="applicationStatus"></span></p>
      <div class="actions">
        <button id="acceptBtn">Accept</button>
        <button id="rejectBtn">Reject</button>
      </div>
    </div>
  </div>

  <script src="../js/employer-dashboard.js" defer></script>
</body>
</html>
